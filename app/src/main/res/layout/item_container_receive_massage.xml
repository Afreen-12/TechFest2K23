<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:padding="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatprofileImage"
        android:layout_width="30dp"
        android:layout_height="30dp"

        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receiveMassage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@drawable/background_receive_massage"
        android:layout_marginTop="4dp"
       android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:layout_constraintWidth_max="wrap"
        android:paddingRight="50dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:text="Hi everyone "

        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/chatprofileImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/receiveTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:text="19:21"
        android:textColor="#3F51B5"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/receiveMassage"
        app:layout_constraintTop_toBottomOf="@+id/receiveMassage" />
</androidx.constraintlayout.widget.ConstraintLayout>